{
  "root": true,
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useTemplate": "off",
        "noRestrictedImports": {
          "options": {
            "paths": {
              "zod": {
                "importNames": ["z"],
                "message": "Use `import * as z from \"zod\"` instead of `import { z }`."
              }
            }
          },
          "level": "error"
        },
        "useImportType": {
          "level": "error",
          "options": {
            "style": "separatedType"
          }
        },
        "useNodejsImportProtocol": "error",
        "useConst": "error",
        "noRestrictedTypes": "off",
        "noRestrictedGlobals": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noChildrenProp": "off",
        "useUniqueElementIds": "off",
        "noEmptyPattern": "off",
        "useHookAtTopLevel": "off",
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noImplicitAnyLet": "warn",
        "noDuplicateObjectKeys": "warn",
        "noTsIgnore": "error",
        "noDebugger": "error"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off"
      },
      "performance": {
        "noDelete": "error"
      },
      "complexity": {
        "useDateNow": "error",
        "noUselessSwitchCase": "warn",
        "noUselessTypeConstraint": "warn"
      },
      "nursery": {
        "noMisusedPromises": "error",
        "noFloatingPromises": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.json"],
      "formatter": {
        "indentStyle": "space",
        "indentWidth": 2
      }
    },
    {
      "includes": ["packages/**/src/**"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedTypes": {
              "level": "error",
              "options": {
                "types": {
                  "Buffer": {
                    "message": "Buffer is deprecated. Use `Uint8Array` instead.",
                    "use": "Uint8Array"
                  }
                }
              }
            },
            "noRestrictedGlobals": {
              "level": "error",
              "options": {
                "deniedGlobals": {
                  "Buffer": "Buffer is deprecated. Use `Uint8Array` instead."
                }
              }
            }
          }
        }
      }
    },
    {
      "includes": [
        "**/*.test.*",
        "**/*.spec.*",
        "**/test/**",
        "**/__tests__/**"
      ],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedTypes": "off",
            "noRestrictedGlobals": "off"
          }
        }
      }
    }
  ],
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/*.css",
      "!**/dist",
      "!**/coverage",
      "!**/build",
      "!**/.next",
      "!**/.turbo",
      "!**/.cache"
    ]
  }
}
